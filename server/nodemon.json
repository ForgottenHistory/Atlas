{
  "watch": [
    "src/**/*",
    "server.js",
    "package.json"
  ],
  "ignore": [
    "data/**/*",
    "node_modules/**/*",
    "*.log",
    "*.tmp",
    "*.temp",
    ".git/**/*",
    "coverage/**/*",
    "dist/**/*",
    "build/**/*"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000
}